# see http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
max_line_length = 200

[*.{css,html,js,less,txt,json,yml,yaml,md}]
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 4
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
